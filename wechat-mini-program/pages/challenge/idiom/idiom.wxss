
/* page */

.idiom-page {
  background: #D5EBEE;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}


/* view */

.level-view {
  text-align: center;
  font-size: 35rpx;
  width: 400rpx;
  height: 110rpx;
  line-height: 100rpx;
  background-repeat: no-repeat;
  background-size: contain;
  /* 背景图片不支持本地图片，解决方案：网络图片或者base64流 */
  background-image: url('data:image/png;base64,');
}

.idiom-view {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  width: 80%;
  padding: 50rpx;
  color: #333333;
  text-align: center;
  font-size: 50rpx;
  font-family: Hannotate SC;
}

.idiom-word-view-1 {
  color: #333333;
  display: block;
  text-align: center;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.idiom-word-view-2 {
  background: white;
  color: #333333;
  border-radius: 10rpx;
  border: 1px solid #999999;
  display: block;
  text-align: center;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.select-grids {
  width: 100%;
  flex-wrap: wrap;
  display:flex; 
  align-items: center; 
  justify-content: center;
}

.select-word-view-1 {
  background: white;
  color: #00B796;
  border-radius: 10rpx;
  border: 1px solid #999999;
  text-align: center;
  width: 110rpx;
  height: 110rpx;
  line-height: 110rpx;
  margin: 15rpx;
}

.select-word-view-2 {
  background: #00B796;
  color: white;
  border-radius: 10rpx;
  border: 1px solid white;
  text-align: center;
  width: 110rpx;
  height: 110rpx;
  line-height: 110rpx;
  margin: 15rpx;
}

.result-failed-view {
  visibility: hidden;
  opacity: 0;
  transition: opacity .3s;
}

.result-failed-view_show{
  visibility: visible;
  opacity: 1;
}